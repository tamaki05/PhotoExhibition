<div class=" d-flex align-items-center justify-content-center pt-5">
  <div class="container">
    <div class="row">
      <div class="col-11 col-md-8 col-lg-6 mx-auto">
        <div class="card shadow">
          <div class="card-body text-secondary text-center">
            <h2>Log in</h2><br>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail", placeholder: "メールアドレス", class: "form-control" %>
                </div>

                <div class="field">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", placeholder: "パスワード", class: "form-control" %>
                </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div><br>
              <% end %>

                <div class="actions">
                  <%= f.submit "Log in", class: "pushcircle" %>
                </div><br>
              <% end %>

                <p>会員登録がお済みでない方は<br>
                   <%= link_to "こちら", new_user_registration_path %>から新規登録を行ってください</p>
                    <%#= render "public/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

