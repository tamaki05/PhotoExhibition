<!--いいね機能実装-->
  <% if exhibition.favorited_by?(current_user) %>
      <%= link_to exhibition_favorites_path(exhibition), method: :delete, remote: true, class: "link" do %>
        <i class="fa-solid fa-heart-circle-minus fa-2x" style="color: pink;"></i><%= exhibition.favorites.count %>
      <% end %>
      <% else %>
      <%= link_to exhibition_favorites_path(exhibition), method: :post, remote: true, class: "link" do %>
        <i class="fa-solid fa-heart-circle-plus fa-2x" style="color: silver;"></i><%= exhibition.favorites.count %>
      <% end %>
  <% end %>