        <%= f.text_area :introduction, placeholder: "キャプション", class: "form-control" %><br>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "カテゴリー選択"}, {class: "form-control input-sm"} %><br><br>
        <input class="btn-form-gray" type="submit" value="展示する"></p><br>
      <% end %>
    </div>
  </div>
</div>
