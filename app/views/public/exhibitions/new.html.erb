<div class="col-9 col-md-6 col-lg-4 mx-auto pt-5">
  <div class="card shadow">
    <div class="card-body text-center pt-5">
      <h2>作品を展示</h2><br><br>
      <!--バリデーションの設定-->
      <% if @exhibition.errors.any? %>
        <%= @exhibition.errors.count %>件のエラーが発生しました
        <ul>
          <% @exhibition.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @exhibition do |f| %>
        <%= f.file_field :image, accept: "image/*"%><br><br><br>
