<div class="col-9 col-md-6 col-lg-4 mx-auto pt-5">
  <div class="card shadow">
    <div class="card-body mg-5">
      <h2 class="text-center">編集画面</h2><br>
      <%= form_with model: @exhibition do |f| %>
        <p>タイトル</p>
        <p><%= f.text_field :title, class: "form-control" %></p>
        <p>キャプション</p>
        <p><%= f.text_field :introduction, class: "form-control" %></p><br>
        <div class="text-center"><%= f.submit '更新する', class: "btn-form-blue" %></div><br>
      <% end %>
    </div>
  </div>
</div>
