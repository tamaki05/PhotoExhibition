<div class=" d-flex align-items-center justify-content-center pt-5">
  <div class="container">
    <div class="row">
      <div class="col-11 col-md-8 col-lg-6 mx-auto">
        <div class="text-center">
          <h4><strong>フォロー</strong></h4><br>
        </div>
      </div>
    </div>
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <table align="center">
            <thead>
              <tr>
                <th width="80"></th>
                <th width="200"></th>
                <th width="200"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= image_tag user.get_profile_image(600, 600), class: "rounded-circle", size: "50x50" %></td>
                <td><strong><%= user.nickname %></strong><br>
                            <%= user.profile %></td>
                <td><% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info"  %>
                    <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% else %>
        <p>フォローしているユーザーはいません</p>
      <% end %>
  </div>
</div>
