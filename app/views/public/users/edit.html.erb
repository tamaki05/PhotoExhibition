<div class=" d-flex align-items-center justify-content-center pt-5">
  <div class="container">
    <div class="row">
      <div class="col-11 col-md-8 col-lg-6 mx-auto">
        <div class="card shadow">
          <div class="card-body text-secondary text-center">
            <h1>会員情報変更</h1>
              <%= form_with model: @user do |f| %>
                <p>名前</p>
                <p><%= f.text_field :name %></p>
                <p>メールアドレス</p>
                <p><%= f.text_field :email %></p>
                <p>ニックネーム</p>
                <p><%= f.text_field :nickname %></p>
                <p>プロフィール</p>
                <p><%= f.text_field :profile %></p>
                <p>外部リンク</p>
                <p><%= f.text_field :extemal_link%></p>
                <%= f.submit '保存' %>
              <% end %>
                <%= link_to '退会', users_unsubscribe_path, class: "btn btn-sm btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
