<div class="col-9 col-md-6 col-lg-4 mx-auto pt-5">
  <div class="card shadow">
    <div class="card-body mg-5">
      <h2 class="text-center">会員情報変更</h2>
        <%= form_with model: @user do |f| %>
          <p>名前</p>
          <p><%= f.text_field :name, class: "form-control" %></p>
          <p>メールアドレス</p>
          <p><%= f.text_field :email, class: "form-control" %></p>
          <p>アイコン</p>
          <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          <p>プロフィール</p>
          <p><%= f.text_area :profile, class: "form-control" %></p>
          <p>外部リンク</p>
          <p><%= f.text_field :extemal_link, class: "form-control"%></p>
          <div class="text-center"><%= f.submit '変更を保存', class: "btn-form-blue" %></div>
        <% end %>
        <div class="edit-btn">
          <button class = "button-edit"><%= link_to 'キャンセル', user_path(@user.id), class: "btn-link-gray" %></button><br><br>
          <button class = "button-edit"><%= link_to '退会', users_unsubscribe_path, class: "btn-link-red" %></button>
        </div><br>
    </div>
  </div><br><br>
</div>

