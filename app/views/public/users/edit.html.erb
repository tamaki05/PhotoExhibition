<div class=" d-flex align-items-center justify-content-center pt-5">
  <div class="container">
    <div class="row">
      <div class="col-11 col-md-8 col-lg-6 mx-auto">
        <div class="card shadow">
          <div class="card-body text-secondary">
            <h1 class="text-center">会員情報変更</h1>
              <%= form_with model: @user do |f| %>
                <p>名前</p>
                <p><%= f.text_field :name, class: "form-control" %></p>
                <p>メールアドレス</p>
                <p><%= f.text_field :email, class: "form-control" %></p>
                <p>ニックネーム</p>
                <p><%= f.text_field :nickname, class: "form-control" %></p>
                <p>プロフィール</p>
                <p><%= f.text_field :profile, class: "form-control" %></p>
                <p>外部リンク</p>
                <p><%= f.text_field :extemal_link, class: "form-control"%></p>
                <div class="text-center"><%= f.submit '保存' %></div>
              <% end %>
                <div class="text-center"><%= link_to '退会', users_unsubscribe_path, class: "btn btn-sm btn-success" %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
