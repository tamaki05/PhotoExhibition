<div class=" d-flex align-items-center justify-content-center pt-5">
  <div class="container">
    <div class="row">
      <div class="col-11 col-md-8 col-lg-6 mx-auto">
        <div class="text-center">
          <tabele>
            <tr>
              <th></th>
              <th></th>
            </tr>
            <tr>
              <td>
                <h1>Photo Gallery
              </td>
              <td>
                <%= link_to new_exhibition_path do %>
                  <i class="fa-sharp fa-solid fa-circle-plus" style="color: dimgray;"></i>
                <% end %></h1>
              </td>
            </tr>
          </tabele>

        </div>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <% @exhibitions.each do |exhibition| %>
        <div class="mt-1 pb-10">
          <%= link_to exhibition_path(exhibition.id) do %>
            <%= image_tag exhibition.get_image(600,600), size: "200x200" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>